            <div class="col-lg-4 col-md-6 col-sm-6 col-12">
                <div class="article-style-03">
                    <div class="thumb">
                        <img src="{{post.data.image}}" alt="{{post.data.imageAlt}}">
                    </div>
                    <div class="content">
                        <span class="date">{{post.date | postDate}}</span>
                        <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
