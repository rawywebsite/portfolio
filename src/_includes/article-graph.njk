<li class="wow fadeInLeft" data-wow-duration="1.5s">
                                    <div class="list_inner">
                                        <div class="image">
                                            <img src="{{post.data.image}}" alt="" />
                                            <div class="main" data-img-url="{{post.data.image}}"></div>
                                            <a class="shane_tm_full_link" href="#"></a>
                                        </div>
                                        <div class="details">
                                            <h3 class="title"><a href="#">{{ post.data.title }}</a></h3>
                                            <p class="date">By <a href="#">{{ post.data.author }}</a> <span>{{post.date | postDate}}</span></p>
                                            <a href="{{post.url}}">reading more</a>
                                        </div>
                                        <div class="news_hidden_details">
                                            <div class="news_popup_informations">
                                                <div class="text">
                                                    <p>
                                                        {{post.data.description}}
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>